@model IEnumerable<Data.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="cart_items">
    <div class="container">






        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description">Name</td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        @*<td class="total">Total</td>*@
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
            {


            <tr id="item">

                <td class="cart_product">
                    @if (item.Product.ImagePath != null)
                        {
                        <img src="~/Content/images/@item.Product.ImagePath" width="100" height="70" />
                        <p>@Html.DisplayFor(modelItem => item.Product.ProductName)</p>

                        }
                        else
                        {
                        <img src="~/Content/images/noPic.jpg" width="100" height="70" />
                        <p>@Html.DisplayFor(modelItem => item.Product.ProductName)</p>

                        }
                </td>
                <td class="cart_description">
                    <p> @item.Product.ProductName</p>
                </td>
                <td class="cart_price">
                    <p>@(string.Format("{0:c}", item.Product.Price))</p>
                </td>
                <td class="cart_quantity">
                    <p> @item.Product.Quantity</p>
                </td>
                @*<td class="cart_total">
                        <p class="cart_total_price">$@item.Price</p>
                    </td>*@

                @*<td>

                        <a class="delProduct" href="" data-product-id="@item.PKProductId">@item.PKProductId</a>
                    </td>*@

                @*<td class="cart_delete">
                        <a class="delProduct" href="" data-product-id="@item.PKProductId"><i class="fa fa-times"></i></a>
                    </td>*@

            </tr>
            }


                </tbody>


            </table>
        </div>


    </div>
</section>

@section scripts{
    script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Content/style/js/main.js"></script>
    <script src="~/Content/style/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/style/js/jquery.scrollUp.min.js"></script>
    <script src="~/Scripts/script.js"></script>

    <script>
        $(document).ready(function () {
            $(function () {
                $.scrollUp({
                    scrollName: 'scrollUp', // Element ID
                    scrollDistance: 300, // Distance from top/bottom before showing element (px)
                    scrollFrom: 'top', // 'top' or 'bottom'
                    scrollSpeed: 300, // Speed back to top (ms)
                    easingType: 'linear', // Scroll to top easing (see http://easings.net/)
                    animation: 'fade', // Fade, slide, none
                    animationSpeed: 200, // Animation in speed (ms)
                    scrollTrigger: false, // Set a custom triggering element. Can be an HTML string or jQuery object
                    //scrollTarget: false, // Set a custom target element for scrolling to the top
                    scrollText: '<i class="fa fa-angle-up"></i>', // Text for element, can contain HTML
                    scrollTitle: false, // Set a custom <a> title if required.
                    scrollImg: false, // Set true to use image
                    activeOverlay: false, // Set CSS color to display scrollUp active point, e.g '#00FFFF'
                    zIndex: 2147483647 // Z-Index for the overlay
                });
            });
        });
    </script>
}